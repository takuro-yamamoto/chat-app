<div class="main_chat">
  <div class="chat_upper">
    <div class="left-header">
      <div class="header-title">
        hogefuga
      </div>
    </div>
    <div class="right-header">
      <div class="header-button">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>
  <div class="chat_middle">
    <div class="message">
      <div class="m_user">
        <div class="m_username">Tom</div>
        <div class="time">2020/12/18</div>
      </div>
      <div class="text">おはよう</div>
    </div>
    <div class="message">
      <div class="m_user">
        <div class="m_username">Sim</div>
        <div class="time">2020/12/18</div>
      </div>
      <div class="text">こんにちは</div>
    </div>
  </div>

  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
</div>